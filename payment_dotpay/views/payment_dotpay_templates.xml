<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dotpay_acquirer_button">
        <form t-if="acquirer.dotpay_pos_id" t-att-action="tx_url" method="post" target="_self">

            <!-- input name="pid" t-att-value='pid'  / -->
            <!-- input name="buttontext" t-att-value='buttontext' / -->

            <input name="api_version" t-att-value='api_version' type="hidden" />
            <input name="id" t-att-value='id'  type="hidden" />
            <input name="amount" t-att-value='amount'  type="hidden" />
            <input name="currency" t-att-value='currency'  type="hidden" />
            <input name="description"  t-att-value='description' type="hidden" />
            <input name="control" t-att-value='control' type="hidden" />
            <input name="firstname" t-att-value='firstname' type="hidden" />
            <input name="lastname" t-att-value='lastname' type="hidden" />
            <input name="email" t-att-value='email' type="hidden" />
            <input name="type" t-att-value='type' type="hidden" />
            <input name="url" t-att-value='url' type="hidden" />
            <input name="urlc" t-att-value='urlc' type="hidden" />
            <!-- input name="channel" t-att-value='channel' />
            <input name="ch_lock" t-att-value='ch_lock' / -->
            <!-- input name="credit_card_store" t-att-value='credit_card_store' />
            <input name="credit_card_customer_id" t-att-value='credit_card_customer_id' / -->

            <input name="chk"  t-att-value='chk' type="hidden" />



            <!-- submit -->
            <button type="submit" width="100px" t-att-class="submit_class">
                <img t-if="not submit_txt" src="/payment_dotpay/static/src/img/dotpay_icon.png"/>
                <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
            </button>
        </form>
    </template>
</odoo>
